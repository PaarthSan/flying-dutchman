{
    "cSpell.diagnosticLevel": "Hint",
    "psi-header.changes-tracking": {
        "isActive": true,
        "modAuthor": "Modified By:",
        "modDate": "Last Modified:",
        "modDateFormat": "dddd, Do MMMM YYYY",
        "include": [],
        "includeGlob": ["**/*.js", "**/*.html", "**/*.css"],
        "exclude": [],
        "excludeGlob": [
            "./**/*/ignoreme.*",
            "**/BeveragesDB.js",
            "**/DBLoaded.js"
        ],
        "autoHeader": "autoSave",
        "enforceHeader": true
    },
    "psi-header.templates": [
        {
            "language": "*",
            "template": [
                "File: <<filename>>",
                "",
                "DESCRIPTION",
                "",
                "Author: <<author>>",
                "-----",
                "Last Modified: <<dateformat('dddd, Do MMMM YYYY')>>",
                "Modified By: <<author>> (<<authoremail>>>)"
            ]
        }
    ]
}
